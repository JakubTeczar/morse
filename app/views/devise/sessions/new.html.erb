<div class="container">
  <a href="<%= home_index_path %>" class="back-link top" style="display:block"></a> 
  <div class="py-5 mx-auto card-body" style="max-width: 30rem; margin-top: 7rem ">
    <div class="mobile-gif"  style="top: 2rem"></div>
    <h2 class="" style="font-size: 2.5rem">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:"d-grid gap-3"}) do |f| %>
      <div class="form-outline" >
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" , class: "form-control form-control-lg"} %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control form-control-lg" } %>
        <%= f.input :remember_me, as: :boolean, input_html: { class: "form-check-input me-2" } if devise_mapping.rememberable? %>
      </div>

      <div class="my-4 form-actions">
        <%= f.button :submit, "Log in", class:"btn btn-primary btn-lg btn-block mx-auto px-4", style:"background-color: #42626C" %>
      </div>
    <% end %>
    <div class="fs-6" style="font-weight:600">
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>